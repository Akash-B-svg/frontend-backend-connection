//Javascript code-
function showEmpDetails(){
    fetch("http://localhost:8080/empDetails")
    .then((response) =>response.json())
    .then((employees) => {
        const dataTable = document.getElementById("empTable")
        employees.forEach(employee => {
            var row =`<tr>
            <td>${employee.empId}</td>
            <td>${employee.empName}</td>
            <td>${employee.empDept}</td>
            <td>${employee.empBranch}</td>
            </tr>`
            dataTable.innerHTML+=row;
        });
    });
}

